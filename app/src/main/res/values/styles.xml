<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.TapNote.AppBarFloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TapNote.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialAbout" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="note_head">
        <item name="android:paddingTop">16dp</item>
        <!--<item name="android:paddingBottom">8dp</item>-->
        <item name="android:color">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="note_excerpt">
        <!--<item name="android:paddingTop">5dp</item>-->
        <item name="android:paddingBottom">16dp</item>
        <item name="android:color">#716f6f</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="note_tag">
        <item name="android:layout_marginTop">20dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <item name="android:textColor">#fff</item>
        <item name="android:padding">5dp</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#4f2ca5</item>
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:bottomLeftRadius">15dp</item>
    </style>

</resources>
