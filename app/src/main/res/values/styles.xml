<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="AppTheme.Dark" />-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <!--Toolbar Theme-->
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <!--Element theme-->
        <item name="aboutCardBackground">@color/cardBackgroundColor</item>
    </style>

    <style name="AppTheme.Dark" parent="MaterialDrawerTheme">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColor">@color/primaryTextInverse</item>
        <item name="android:textColorSecondary">@color/secondaryTextInverse</item>
        <!--Toolbar Theme-->
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="toolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <!--Element theme-->
        <item name="aboutCardBackground">@color/cardBackgroundColorInverse</item>
    </style>

    <style name="TextAppearance.TapNote.AppBarFloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.TapNote.FloatLabel" parent="android:TextAppearance.Small">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NoteAppearance">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="note_tag">
        <item name="android:layout_marginTop">20dp</item>
        <!--<item name="android:layout_marginRight">10dp</item>-->
        <item name="android:textColor">#fff</item>
        <item name="android:padding">5dp</item>
        <item name="android:color">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#4f2ca5</item>
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:bottomRightRadius">15dp</item>
        <item name="android:bottomLeftRadius">15dp</item>
    </style>

</resources>
