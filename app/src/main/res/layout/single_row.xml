<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#666"
    android:orientation="horizontal"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_head"
            style="@style/note_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_head" />

        <TextView
            android:id="@+id/note_excerpt"
            style="@style/note_excerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_excerpt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#fff">

        <TextView
            android:id="@+id/note_tag"
            style="@style/note_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="right"
            android:text="@string/note_tag" />
    </LinearLayout>


</LinearLayout>